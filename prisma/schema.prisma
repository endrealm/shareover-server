// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  token         String         @unique
  name          String
  location      String
  latitude      Float
  longitude     Float
  offers        Offer[]
  notifications Notification[]
  subscriptions Subscription[]
}

model Category {
  id            String         @id
  offers        Offer[]
  subscriptions Subscription[]
}

model Offer {
  id            Int            @id @default(autoincrement())
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        Int
  category      Category       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId    String
  units         Int
  location      String
  latitude      Float
  longitude     Float
  notifications Notification[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  offer     Offer    @relation(fields: [offerId], references: [id], onDelete: Cascade)
  createdAt DateTime
  offerId   Int
  location  String
  latitude  Float
  longitude Float
}

model Subscription {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String
  location   String
  latitude   Float
  longitude  Float
}
